<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/practice_game_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/hands_spelling_word_vote_in_sign_language"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/practice_game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game 1"
            android:layout_toRightOf="@+id/practice_game_image"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed">
        </TextView>

        <ProgressBar
            android:id="@+id/practice_game_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="60"
            android:progressTint="@color/neon_pink"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_below="@+id/practice_game_title"
            android:layout_toRightOf="@id/practice_game_image"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/practice_game_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/practice_game_progressbar"
            android:layout_toRightOf="@id/practice_game_image"
            android:padding="10dp"
            android:text="@string/first_slide_desc"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>